{
	"name": "crystal-demos",
	"authors": [
		"Gabriel Gheorghe"
	],
	"description": "Demo apps using Crystal Engine.",
	"license": "GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007",
	"dependencies": {
		"crystal-engine": "~master"
	},
	"targetName": "crystalenginegame",
	"configurations": [
		{
			"name": "windows-desktop-32",
            "copyFiles-windows-x86": [
                "libs/win_x86/FreeImage.dll",
				"libs/win_x86/SDL2.dll",
				"res"
            ],
			"targetType": "executable",
			"targetPath": "bin/win_x86_32",
			"platforms": ["windows"]
		},
		{
			"name": "windows-desktop-64",
			"copyFiles-windows-x86_64": [
                "libs/win_x86_64/FreeImage.dll",
				"libs/win_x86_64/SDL2.dll",
				"res"
            ],
			"targetType": "executable",
			"targetPath": "bin/win_x86_64",
			"platforms": ["windows"]
		}
	]
}
